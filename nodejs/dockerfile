# Use Node.js v23 as the base image
FROM node:23-slim

# Set working directory
WORKDIR /app

# Install curl for health checks
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

# Verify Node.js and npm are available
RUN node --version && npm --version

# Copy package files first for better Docker layer caching
COPY package*.json ./
COPY tsconfig*.json ./

# Copy build scripts that are needed during installation
COPY scripts/ ./scripts/

# Install dependencies (including esbuild)
RUN npm ci --only=production

# Install dev dependencies needed for build
RUN npm ci

# Copy the entire codebase
COPY . .

# Create miniapp directory structure
RUN mkdir -p public/miniapp/{dist,images} && \
    mkdir -p dist/public/miniapp/{dist,images}

# Build the application in the correct order
# 1. Build backend TypeScript
RUN npm run build:backend

# 2. Bundle frontend JavaScript (main.ts and pet.ts)
RUN npm run build:frontend

# 3. Copy all public files to dist
RUN npm run copy-public

# Verify the build structure
RUN echo "ðŸ“Š Build verification:" && \
    echo "Public/miniapp contents:" && ls -la public/miniapp/ || echo "No public/miniapp" && \
    echo "Dist/public/miniapp contents:" && ls -la dist/public/miniapp/ || echo "No dist/public/miniapp" && \
    echo "JavaScript bundles:" && ls -la public/miniapp/dist/ || echo "No JS bundles" && \
    echo "Dist JavaScript bundles:" && ls -la dist/public/miniapp/dist/ || echo "No dist JS bundles"

# Clean up dev dependencies to reduce image size
RUN npm prune --production

# Set environment variables
ENV NODE_ENV=production
ENV PORT=3000

# Create a startup script with better diagnostics
RUN echo '#!/bin/sh\n\
echo "ðŸš€ Starting ThyKnow Mini App Server"\n\
echo "ðŸ“Š Environment: $NODE_ENV"\n\
echo "ðŸ”Œ Port: $PORT"\n\
echo ""\n\
echo "ðŸ“ Directory Structure:"\n\
echo "Root directory:" && ls -la\n\
echo ""\n\
echo "ðŸ“¦ Public directory:" && ls -la public/ 2>/dev/null || echo "No public directory"\n\
echo "ðŸ“± Public/miniapp:" && ls -la public/miniapp/ 2>/dev/null || echo "No public/miniapp"\n\
echo "ðŸ”§ Public/miniapp/dist:" && ls -la public/miniapp/dist/ 2>/dev/null || echo "No public/miniapp/dist"\n\
echo "ðŸ–¼ï¸ Public/miniapp/images:" && ls -la public/miniapp/images/ 2>/dev/null || echo "No public/miniapp/images"\n\
echo ""\n\
echo "ðŸ“¦ Dist directory:" && ls -la dist/ 2>/dev/null || echo "No dist directory"\n\
echo "ðŸ“± Dist/public/miniapp:" && ls -la dist/public/miniapp/ 2>/dev/null || echo "No dist/public/miniapp"\n\
echo "ðŸ”§ Dist/public/miniapp/dist:" && ls -la dist/public/miniapp/dist/ 2>/dev/null || echo "No dist/public/miniapp/dist"\n\
echo ""\n\
echo "ðŸ” Key Files Check:"\n\
test -f public/miniapp/index.html && echo "âœ… index.html exists" || echo "âŒ index.html missing"\n\
test -f public/miniapp/pet.html && echo "âœ… pet.html exists" || echo "âŒ pet.html missing"\n\
test -f public/miniapp/dist/main.js && echo "âœ… main.js bundle exists" || echo "âŒ main.js bundle missing"\n\
test -f public/miniapp/dist/pet.js && echo "âœ… pet.js bundle exists" || echo "âŒ pet.js bundle missing"\n\
test -f dist/public/miniapp/index.html && echo "âœ… dist/index.html exists" || echo "âŒ dist/index.html missing"\n\
test -f dist/public/miniapp/dist/main.js && echo "âœ… dist/main.js bundle exists" || echo "âŒ dist/main.js bundle missing"\n\
echo ""\n\
echo "ðŸŽ¯ Starting Node.js server..."\n\
exec node dist/src/server.js' > /app/start.sh && chmod +x /app/start.sh

# Expose the application port
EXPOSE 3000

# Health check - check if server is responding and key files exist
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
  CMD curl -f http://localhost:3000/health && \
      test -f public/miniapp/index.html && \
      test -f dist/public/miniapp/index.html || exit 1

# Use our enhanced startup script
CMD ["/app/start.sh"]