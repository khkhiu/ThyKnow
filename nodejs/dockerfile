# Use Node.js v25 as the base image (Railway compatible)
FROM node:25-slim

# Set working directory
WORKDIR /app

# Copy package files first for efficient layer caching
COPY package*.json ./
COPY frontend/package*.json ./frontend/

# Install backend dependencies
RUN npm ci

# Install frontend dependencies
WORKDIR /app/frontend
RUN npm ci

# Copy the entire codebase
WORKDIR /app
COPY . .

# Build the application
RUN npm run build

# Remove frontend source and node_modules to reduce image size
RUN rm -rf frontend/src frontend/node_modules

# Expose port
EXPOSE $PORT

# Start the application
CMD ["npm", "start"]