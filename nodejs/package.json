{
  "name": "thyknow-express",
  "version": "1.0.0",
  "description": "ThyKnow Telegram bot for self-awareness and connections",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/src/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "dev:frontend": "node scripts/dev-build-frontend.js --watch",
    "build": "npm run build:backend && npm run build:frontend && npm run copy-public",
    "build:backend": "tsc -p tsconfig.json",
    "build:frontend": "npm run bundle:main && npm run bundle:pet && npm run copy-static",
    "bundle:main": "esbuild public/miniapp/src/main.ts --bundle --outfile=public/miniapp/dist/main.js --format=esm --target=es2020 --sourcemap",
    "bundle:pet": "esbuild public/miniapp/src/pet.ts --bundle --outfile=public/miniapp/dist/pet.js --format=esm --target=es2020 --sourcemap",
    "bundle:config": "node esbuild.config.js",
    "bundle:watch": "node esbuild.config.js --watch",
    "copy-static": "node scripts/copy-static-files.js",
    "copy-public": "cp -r public dist/ && mkdir -p dist/public/miniapp/dist && cp -r public/miniapp/dist/* dist/public/miniapp/dist/",
    "fix-imports": "node scripts/fix-html-imports.js",
    "clean": "rm -rf dist && rm -rf public/miniapp/dist",
    "clean:all": "npm run clean && rm -rf node_modules && npm install",
    "railway:up": "railway up",
    "railway:status": "railway status",
    "railway:logs": "railway logs",
    "setup-webhook": "ts-node scripts/setup-railway-webhook.ts",
    "railway:webhook": "railway run ts-node scripts/setup-railway-webhook.ts",
    "lint": "eslint --ext .ts src/",
    "lint:fix": "eslint --ext .ts src/ --fix",
    "test": "mocha --require ts-node/register test/**/*.test.ts",
    "test:coverage": "nyc --reporter=lcov --reporter=text npm test",
    "postinstall": "npm run build",
    "copy-images": "node scripts/copy-images.js",
    "verify-build": "node -e \"console.log('Checking build output...'); const fs = require('fs'); ['public/miniapp/dist/main.js', 'public/miniapp/dist/pet.js'].forEach(file => { try { fs.accessSync(file); console.log('✓', file, 'exists'); } catch { console.log('✗', file, 'missing'); } });\""
  },
  "keywords": [
    "telegram",
    "bot",
    "journaling",
    "self-awareness",
    "connections",
    "railway",
    "miniapp",
    "typescript",
    "esbuild"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@railway/cli": "^4.5.3",
    "agentkeepalive": "^4.6.0",
    "axios": "^1.9.0",
    "commander": "^14.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "moment-timezone": "^0.6.0",
    "morgan": "^1.10.0",
    "node-cron": "^4.1.0",
    "npm-check-updates": "^18.0.1",
    "pg": "^8.16.0",
    "railway": "^2.0.17",
    "telegraf": "^4.16.3",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/mocha": "^10.0.10",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.15.29",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.15.4",
    "@types/sinon": "^17.0.4",
    "@types/sinon-chai": "^4.0.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "chai": "^5.2.0",
    "esbuild": "^0.25.5",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.4.1",
    "mocha": "^11.5.0",
    "nodemon": "^3.1.10",
    "nyc": "^17.1.0",
    "prettier": "^3.5.3",
    "sinon": "^20.0.0",
    "sinon-chai": "^4.0.0",
    "supertest": "^7.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}