{
  "name": "thyknow-express",
  "version": "1.1.0",
  "description": "ThyKnow Telegram bot with integrated React frontend",
  "main": "dist/src/server.js",
  "scripts": {
    "start": "node dist/src/server.js",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "nodemon --exec ts-node src/server.ts",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "tsc -p tsconfig.json",
    "build:frontend": "cd frontend && npm install && npm run build",
    "install:frontend": "cd frontend && npm install",
    "clean": "rm -rf dist",
    "clean:all": "npm run clean && rm -rf node_modules frontend/node_modules && npm install && npm run install:frontend",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "mocha test/**/*.test.ts --require ts-node/register",
    "test:frontend": "cd frontend && npm run test",
    "test:bot": "ts-node scripts/verify-bot-commands.ts",
    "test:bot:commands": "npm run test -- test/bot-commands.test.ts",
    "test:bot:frontend-first": "ts-node scripts/test-frontend-first-commands.ts",
    "migrate": "ts-node scripts/migrate-app-usage-tracking.ts",
    "migrate:rollback": "ts-node scripts/migrate-app-usage-tracking.ts rollback",
    "migrate:status": "ts-node scripts/migrate-app-usage-tracking.ts status",
    "migrate:all": "ts-node scripts/run-all-migrations.ts",
    "migrate:list": "ts-node scripts/list-migrations.ts",
    "db:setup": "npm run migrate",
    "db:seed": "ts-node scripts/seed-test-data.ts",
    "db:reset": "npm run db:drop && npm run db:create && npm run migrate && npm run db:seed",
    "db:status": "npm run migrate:status",
    "analytics:export": "ts-node scripts/export-analytics.ts",
    "analytics:dashboard": "ts-node scripts/start-analytics-dashboard.ts",
    "deploy:staging": "npm run test && npm run build && railway deploy --environment staging",
    "deploy:production": "npm run test && npm run build && railway deploy --environment production",
    "monitor:bot": "ts-node scripts/monitor-bot-health.ts",
    "monitor:frontend": "ts-node scripts/monitor-frontend-usage.ts",
    "logs:bot": "railway logs --service bot",
    "logs:frontend": "railway logs --service frontend",
    "setup:env": "ts-node scripts/setup-environment.ts",
    "setup:webhook": "ts-node scripts/setup-webhook.ts",
    "setup:complete": "npm run setup:env && npm run migrate && npm run setup:webhook",
    "clean:install": "npm run clean && rm -rf node_modules && npm install"
  },
  "keywords": [
    "telegram",
    "bot",
    "journaling",
    "self-awareness",
    "connections",
    "railway",
    "miniapp",
    "typescript",
    "esbuild",
    "weekly-streaks",
    "gamification",
    "habit-tracking"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@railway/cli": "^4.5.3",
    "agentkeepalive": "^4.6.0",
    "axios": "^1.9.0",
    "chai": "^5.2.0",
    "commander": "^14.0.0",
    "concurrently": "^9.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "moment-timezone": "^0.6.0",
    "morgan": "^1.10.0",
    "node-cron": "^4.1.0",
    "node-fetch": "^3.3.2",
    "npm-check-updates": "^18.0.1",
    "pg": "^8.16.0",
    "sinon": "^21.0.0",
    "supertest": "^7.1.1",
    "telegraf": "^4.16.3",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.14",
    "@types/joi": "^17.2.3",
    "@types/mocha": "^10.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.0.1",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.15.4",
    "@types/sinon": "^17.0.4",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "esbuild": "^0.25.5",
    "eslint": "^9.28.0",
    "mocha": "^11.6.0",
    "nodemon": "^3.1.10",
    "nyc": "^17.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "railway": {
    "build": {
      "command": "npm run build"
    },
    "deploy": {
      "startCommand": "npm run start:production"
    }
  }
}