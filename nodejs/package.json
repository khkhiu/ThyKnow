{
  "name": "thyknow-telegram-app",
  "version": "1.0.0",
  "description": "ThyKnow - A Telegram Mini App for self-awareness and building connections",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc && npm run build:miniapp",
    "build:server": "tsc",
    "build:miniapp": "tsc -p tsconfig.miniapp.json",
    "watch:miniapp": "tsc -p tsconfig.miniapp.json --watch",
    "clean:miniapp": "rimraf public/miniapp/dist/*",
    "railway:up": "railway up",
    "railway:status": "railway status",
    "railway:logs": "railway logs",
    "setup-webhook": "ts-node scripts/setup-railway-webhook.ts",
    "railway:webhook": "railway run ts-node scripts/setup-railway-webhook.ts",
    "setup-webapp": "ts-node scripts/setup-webapp-with-botfather.ts",
    "lint": "eslint --ext .ts src/ public/miniapp/src/",
    "lint:fix": "eslint --ext .ts src/ public/miniapp/src/ --fix",
    "test": "mocha --require ts-node/register test/**/*.test.ts",
    "test:coverage": "nyc --reporter=lcov --reporter=text npm test",
    "db:test": "node scripts/railway-db-test.js",
    "postinstall": "npm run build"
  },
  "keywords": [
    "telegram",
    "bot",
    "mini-app",
    "journaling",
    "self-awareness",
    "connections",
    "railway",
    "typescript"
  ],
  "author": "ThyKnow Team",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@railway/cli": "^4.1.0",
    "agentkeepalive": "^4.6.0",
    "axios": "^1.9.0",
    "commander": "^13.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "moment-timezone": "^0.5.48",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "pg": "^8.15.6",
    "railway": "^2.0.17",
    "telegraf": "^4.16.3",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/chai": "^5.2.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/mocha": "^10.0.10",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.15.2",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.11.14",
    "@types/sinon": "^17.0.4",
    "@types/sinon-chai": "^4.0.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "chai": "^5.2.0",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.6",
    "mocha": "^11.1.0",
    "nodemon": "^3.1.10",
    "npm-check-updates": "^18.0.1",
    "nyc": "^17.1.0",
    "prettier": "^3.5.3",
    "rimraf": "^5.0.5",
    "sinon": "^20.0.0",
    "sinon-chai": "^4.0.0",
    "supertest": "^7.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ]
}