# File: .env.example
# Environment variable example for ThyKnow deployment on Railway

# Required: Telegram Bot Token
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Application Environment
NODE_ENV=development  # Use 'production' on Railway

# Server Configuration
PORT=3000
BASE_URL=http://localhost:3000  # Railway will provide RAILWAY_STATIC_URL

# Timezone Settings
TIMEZONE=Asia/Singapore

# Scheduler Settings for Weekly Prompts
PROMPT_DAY=1  # Monday
PROMPT_HOUR=9  # 9 AM

# Maximum history entries to display
MAX_HISTORY=5

# Log Level
LOG_LEVEL=info  # Use debug for more detailed logs during development

# PostgreSQL Database Configuration (for local development)
# Railway will provide DATABASE_URL automatically
DB_HOST=localhost
DB_PORT=5432
DB_NAME=thyknow
DB_USER=postgres
DB_PASSWORD=your_postgres_password
DB_SSL=false
DB_POOL_SIZE=10
DB_IDLE_TIMEOUT=30000