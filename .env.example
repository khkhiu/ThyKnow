# File: .env.example
# Environment variable example with PostgreSQL configuration

# Required: Telegram Bot Token
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=thyknow
DB_USER=postgres
DB_PASSWORD=your_postgres_password
DB_SSL=false
DB_POOL_SIZE=10
DB_IDLE_TIMEOUT=30000

# Server Configuration
PORT=3000
NODE_ENV=development
BASE_URL=http://localhost:3000

# Timezone Settings
TIMEZONE=Asia/Singapore

# Scheduler Settings
PROMPT_DAY=1  # Monday
PROMPT_HOUR=9  # 9 AM

# Maximum history entries to show
MAX_HISTORY=5

# GCP Project Settings (for Cloud SQL deployment)
PROJECT_ID=your-gcp-project-id
REGION=us-central1