{
  "name": "functions",
  "description": "Firebase Cloud Functions for Telegram Journal Bot",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "setup-webhook": "ts-node scripts/setup-webhook.ts",
    "setup-scheduler": "chmod +x scripts/setup-scheduler.sh && scripts/setup-scheduler.sh",
    "setup-secrets": "chmod +x scripts/setup-secrets.sh && scripts/setup-secrets.sh",
    "test-scheduler": "chmod +x scripts/test-scheduler.sh && scripts/test-scheduler.sh",
    "full-deploy": "chmod +x scripts/deploy.sh && scripts/deploy.sh",
    "logs": "firebase functions:log",
    "lint": "eslint --ext .js,.ts .",
    "lint:fix": "eslint --ext .js,.ts . --fix"
  },
  "engines": {
    "node": "20"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@types/dotenv": "^6.1.1",
    "commander": "^13.1.0",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^6.3.2",
    "moment-timezone": "^0.5.43",
    "telegraf": "^4.15.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "axios": "^1.6.5",
    "dotenv": "^16.4.7",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.2.1",
    "firebase-functions-test": "^3.1.0",
    "prettier": "^2.8.3",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.0"
  },
  "private": true
}