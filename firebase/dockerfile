FROM node:23-slim

# Create app directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy application code
COPY . .

# Build TypeScript
RUN npm run build

# Set environment variables
ENV NODE_ENV=production
ENV PORT=3000

# Create directories for logs
RUN mkdir -p logs

# Expose port
EXPOSE 3000

# Run the application
CMD ["node", "dist/server.js"]